{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
  },
  "exclude": [
    "node_modules", "build" /* Exclude modules from the program. */
  ],
  "include": [
    "src/**/*", "declaration.d.ts" /* Include modules in the program. */
  ],  
  "plugins": [{ "name": "typescript-plugin-css-modules" }] // to use css modules
}

